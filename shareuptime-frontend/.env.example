# ShareUpTime Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://api.shareuptime.com
NEXT_PUBLIC_API_TIMEOUT=10000

# Authentication (Server-side only - not exposed to client)
# JWT_SECRET=your-super-secret-jwt-key-here
NEXT_PUBLIC_COOKIE_DOMAIN=shareuptime.com

# Application Settings
NEXT_PUBLIC_APP_NAME=ShareUpTime
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production

# Features Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MEDIA_UPLOAD=true

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Production Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=error
