{
  "name": "shareuptime",
  "version": "1.0.0",
  "description": "Next-generation social media platform with microservices architecture",
  "main": "services/api-gateway/index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "dev": "docker-compose up --build",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "test": "npm run test:services",
    "test:services": "cd services && npm test",
    "lint": "eslint .",
    "setup": "cp .env.example .env && npm run init:db",
    "init:db": "node scripts/init-databases.js"
  },
  "keywords": [
    "social-media",
    "microservices",
    "nodejs",
    "docker",
    "kafka",
    "redis"
  ],
  "author": "ShareUpTime Team",
  "license": "MIT",
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "eslint": "^8.19.0",
    "prettier": "^2.8.8",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-config-prettier": "^9.0.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "firebase-admin": "^13.5.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "pg": "^8.16.3"
  }
}
