{
  "name": "shareuptime",
  "version": "1.0.0",
  "description": "Next-generation social media platform with microservices architecture",
  "main": "services/api-gateway/index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "dev": "docker-compose up --build",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:services": "cd services && npm test",
    "setup": "cp .env.example .env && npm run init:db",
    "init:db": "node scripts/init-databases.js"
  },
  "keywords": [
    "social-media",
    "microservices",
    "nodejs",
    "docker",
    "kafka",
    "redis"
  ],
  "author": "ShareUpTime Team",
  "license": "MIT",
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "firebase-admin": "^13.5.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
