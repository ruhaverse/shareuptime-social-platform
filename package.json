{
  "name": "shareuptime",
  "version": "1.0.0",
  "description": "Next-generation social media platform with microservices architecture",
  "main": "services/api-gateway/index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "dev": "docker-compose up --build",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "test": "npm run test:unit",
    "test:unit": "jest --testPathPattern='__tests__' --testTimeout=30000",
    "test:backend": "jest --testPathPattern='services' --testTimeout=30000",
    "test:integration": "NODE_ENV=integration jest --testPathPattern='integration' --testTimeout=60000",
    "test:coverage": "jest --coverage --testPathPattern='__tests__'",
    "test:watch": "jest --watch --testPathPattern='__tests__'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup": "cp .env.example .env && npm run init:db",
    "init:db": "node scripts/init-databases.js",
    "health-check": "bash ./acceptance-tests/smoke-tests.sh"
  },
  "keywords": [
    "social-media",
    "microservices",
    "nodejs",
    "docker",
    "kafka",
    "redis"
  ],
  "author": "ShareUpTime Team",
  "license": "MIT",
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "wait-port": "^1.1.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "firebase-admin": "^13.5.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "pg": "^8.16.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "scripts/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "verbose": true,
    "testTimeout": 30000
  }
}
