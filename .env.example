# ShareUpTime Environment Configuration

# Application
NODE_ENV=development
API_GATEWAY_PORT=3000

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
POST_SERVICE_PORT=3003
FEED_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=shareuptime
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/shareuptime

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=shareuptime-media

# Kafka
KAFKA_BROKERS=localhost:9092
ZOOKEEPER_HOST=localhost:2181

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3007
