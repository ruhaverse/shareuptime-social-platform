# ==============================================
# ShareUpTime Backend Environment Variables
# ==============================================

# Application Configuration
NODE_ENV=development
PORT=3000

# ==============================================
# Database Configurations
# ==============================================

# PostgreSQL Configuration (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=shareuptime
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_URI=postgresql://postgres:password@localhost:5432/shareuptime

# MongoDB Configuration (Document Store)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=shareuptime
MONGO_USER=admin
MONGO_PASSWORD=password
MONGO_URI=mongodb://admin:password@localhost:27017/shareuptime?authSource=admin

# Redis Configuration (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URI=redis://localhost:6379

# Neo4j Configuration (Social Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Elasticsearch Configuration (Search)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# ==============================================
# Service Ports
# ==============================================

API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
POST_SERVICE_PORT=3003
FEED_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# ==============================================
# Security Configuration
# ==============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081

# ==============================================
# External Services
# ==============================================

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=shareuptime-media

# MinIO Configuration (local S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=shareuptime-media
MINIO_USE_SSL=false

# ==============================================
# Email Configuration
# ==============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@shareuptime.com

# ==============================================
# Kafka Configuration (Event Streaming)
# ==============================================

KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=shareuptime-backend
KAFKA_GROUP_ID=shareuptime-consumers

# ==============================================
# Monitoring & Logging
# ==============================================

# Log Level
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=30000

# ==============================================
# Rate Limiting
# ==============================================

RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================
# File Upload Configuration
# ==============================================

MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm
UPLOAD_PATH=uploads/

# ==============================================
# Social Media Integration
# ==============================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter OAuth
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ==============================================
# Push Notifications
# ==============================================

# FCM Configuration
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# APNs Configuration (iOS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_PRIVATE_KEY_PATH=./certificates/apns-private-key.p8
APNS_PRODUCTION=false

# ==============================================
# Development & Testing
# ==============================================

# Debug Mode
DEBUG=shareuptime:*

# Test Database
TEST_DB_NAME=shareuptime_test
JEST_TIMEOUT=30000

# Mock Services
MOCK_EXTERNAL_SERVICES=false

# ==============================================
# Production Settings
# ==============================================

# SSL Configuration
SSL_CERT_PATH=./certificates/cert.pem
SSL_KEY_PATH=./certificates/key.pem

# CDN Configuration
CDN_URL=https://cdn.shareuptime.com

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=ShareUpTime Backend
